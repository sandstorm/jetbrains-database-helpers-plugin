<!-- Plugin Configuration File: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN, cannot be changed between the plugin versions. -->
    <id>de.sandstorm.database-helpers</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>Database Helpers</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="kontakt@sandstorm.de" url="https://sandstorm.de">Sandstorm Media</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        Simplifies database connection management in DataGrip and IntelliJ IDEA Ultimate.
        <br><br>
        <b>Features:</b>
        <ul>
            <li>Automatically creates data sources from docker-compose files</li>
            <li>Detects PostgreSQL, MySQL, and MariaDB containers</li>
            <li>Extracts credentials from environment variables and port mappings</li>
            <li>Updates data sources when docker-compose files change</li>
            <li>Command-line interface for opening database connections</li>
        </ul>
        <br>
        <b>Zero configuration required</b> - just open a project with docker-compose files and data sources are created automatically.
        <br><br>
        Created by <a href="https://sandstorm.de">Sandstorm Media</a>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.database</depends>
    <!-- Extensions defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <appStarter id="opensql" implementation="de.sandstorm.databasehelpers.OpenerCommandLine" />
        <backgroundPostStartupActivity implementation="de.sandstorm.databasehelpers.docker.DockerComposeStartupActivity" />
        <notificationGroup id="DataGrip Helpers" displayType="BALLOON" />
    </extensions>

    <applicationListeners>
        <listener class="de.sandstorm.databasehelpers.docker.DockerComposeFileListener"
                  topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
    </applicationListeners>
    <actions>
        <action id="de.sandstorm.databasehelpers.OpenerAction" class="de.sandstorm.databasehelpers.OpenerAction"
                text="DataGrip Test Opener Action" />
    </actions>
</idea-plugin>